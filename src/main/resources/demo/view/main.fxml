            <Button fx:id="recordButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClicked" text="Record" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
